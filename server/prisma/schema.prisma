// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Cadastro {
  cpf          String @unique
  email        String @unique
  password     String
  nomeCompleto String
  logradouro   String
  endereco     String
  numero       String
  bairro       String
  cidade       String
  estado       String
  contato      String

  anuncios Anuncio[]

  @@id([email, password])
}

model Anuncio {
  id          String   @id @default(uuid())
  cadastro    Cadastro @relation(fields: [cadastroCpf], references: [cpf])
  cadastroCpf String

  tipo          String
  calibre       String
  marca         String
  modelo        String
  fotoPrincipal String
  fotos         String
  qntFotos      Int
  valor         String

  descricao       String
  cidade          String
  estado          String
  sistemaRegistro String
  envio           Boolean

  visualizacoesAnuncio Int
  prioridade           Int
  dataCriacao          DateTime @default(now())
}

model MarcasArma {
  nome   String   @id @unique
  Modelo Modelo[]
}

model Calibre {
  nome String @id @unique
}

model TipoArma {
  nome String @id @unique
}

model Modelo {
  id             String     @id @default(uuid())
  nome           String
  marca          MarcasArma @relation(fields: [marcasArmaNome], references: [nome])
  marcasArmaNome String
}
